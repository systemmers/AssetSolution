{
  "name": "asset-management-system",
  "version": "1.0.0",
  "description": "자산 관리 시스템",
  "main": "app.py",
  "scripts": {
    "start": "flask run",
    "dev": "nodemon --exec flask run --no-debugger",
    "build": "vite build",
    "build:dev": "vite build --mode development",
    "watch": "vite build --watch",
    "preview": "vite preview",
    "lint:css": "stylelint \"app/static/css/**/*.css\" --fix",
    "lint:js": "eslint \"app/static/js/**/*.js\" --fix",
    "format": "prettier --write \"app/static/**/*.{css,js}\"",
    "build:legacy": "webpack --mode production",
    "build:legacy:dev": "webpack --mode development"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/plugin-transform-modules-commonjs": "^7.22.5",
    "@babel/plugin-transform-runtime": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@babel/runtime": "^7.27.1",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^9.1.2",
    "babel-preset-minify": "^0.5.2",
    "core-js": "^3.31.0",
    "css-loader": "^6.8.1",
    "eslint": "^9.32.0",
    "nodemon": "^2.0.22",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "style-loader": "^3.3.3",
    "stylelint": "^16.22.0",
    "stylelint-config-standard": "^38.0.0",
    "vite": "^7.0.6",
    "webpack": "^5.86.0",
    "webpack-cli": "^5.1.4"
  },
  "private": true,
  "keywords": [
    "asset",
    "management",
    "flask"
  ],
  "author": "",
  "license": "UNLICENSED",
  "dependencies": {
    "@playwright/mcp": "^0.0.32"
  }
}
